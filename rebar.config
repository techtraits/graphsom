{lib_dirs, ["deps"]}.

{sub_dirs, ["rel"]}.

{deps, [
       {folsom, ".*", {git, "git://github.com/boundary/folsom", "master"}}
       ]}.

{require_otp_vsn, "R14|R15|R16"}.

{erl_opts, [
            fail_on_warning, 
            debug_info, 
            warn_missing_spec
           ]}.

{clean_files, ["*.eunit", "ebin/*.beam", "rel/graphsom"]}.

{cover_enabled, true}.

{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.
